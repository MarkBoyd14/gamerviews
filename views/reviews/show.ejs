<%- include ('../partials/header') %>

<div class="show-container container my-5">
  <header>
    <h1>
      <%= review.title %>
      <a href="/reviews/<%= review.id %>/edit">
        <i class="fa fa-edit"></i>
      </a>
    </h1>
    <br>
    <p><strong>By: <%= review.user.fullname %></strong></p>    
    <% if (review.recommendation == 'RECOMMENDED') { %>
      <p><i class="fa fa-thumbs-up"></i><strong><%= review.recommendation %></strong></p>
    <% } else { %>
    <p><i class="fa fa-thumbs-down"></i><strong><%= review.recommendation %></strong></p>
    <% } %>
    <p><strong><%= review.timePlayed %> hours played</strong></p>

    <small>
      <%= (review.updatedAt.toLocaleString("en-CA")) %>
    </small>
  </header>
  <hr>
  <div class="content">
    <%- review.content %>
  </div>
</div>

<%- include ('../partials/footer') %>